<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <title>Cart</title>
    <style>
#grid{
    display: grid;
    grid-template-columns: auto auto auto;
    margin:20px;
}
#button{
    grid-column: 2;
    display: block;
    width: 80px;
    margin: 150px 50px 0px 180px ;
}
h1{
    text-align: center;
    
}
h2{
    color: blue;
}
h5{
    margin-top: 20px;
}
    </style>
</head>
<body>
    <%- include('nav') %>
    <h1>Cart</h1>
    
    <div id="grid">
    <div>
    <h2>Pizza Added</h2> 
    <form action="/deletep" method="post"><button class="btn btn-primary"> Remove </button></form>
    <% for(let i=0; i<pizza.length; i++){ %> 
        <h5><%=  pizza[i] %></h5><br>
        

        <% } %> 
    </div>
    <div>
    <h2>Burger Added</h2>
    <form action="/deleteb" method="post"><button class="btn btn-primary"> Remove </button></form>
    <% for(let i=0; i<burger.length; i++){ %> 
       <h5><%= burger[i] %></h5> <br>
        <% } %>
    </div>
    <div>  
   <h2>Coffee Added</h2>
   <form action="/deletec" method="post"><button class="btn btn-primary"> Remove </button></form>
   <% for(let i=0; i<coffee.length; i++){ %> 
    <h5><%=  coffee[i] %></h5><br>
    <% } %> 
</div>
</div>

<a style="margin-left: 560px; margin-top: 50px;" href="/proceed" class="btn btn-primary">Proceed</a>

 
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>